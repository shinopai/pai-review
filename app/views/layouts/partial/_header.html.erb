<header class="text-gray-600 bg-white body-font header-nav hidden w-full fixed z-10">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <%= link_to root_path, class: 'flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0' do %>
    <span class="ml-3 text-xl">PaiReview</span>
    <% end %>
    <nav class="ml-10 flex flex-wrap items-center text-base justify-start">
      <%= link_to 'ホーム', root_path, class: 'mr-5 hover:text-gray-900' %>
      <%= link_to 'アイテム一覧', items_path, class: 'mr-5 hover:text-gray-900' %>
      <a class="mr-5 hover:text-gray-900">Amazonで検索する</a>
      <% if user_signed_in? %>
      <%= button_tag type: 'button', class: 'mr-5 hover:text-gray-900', id: 'auth-menu-trigger' do %>
      <i class="fas fa-user"></i>&nbsp;<%= current_user.name %>
      <% end %>
      <% else %>
      <%= link_to 'ログイン', new_user_session_path, class: 'mr-5 hover:text-gray-900' %>
      <%= link_to '新規登録', new_user_registration_path, class: 'mr-5 hover:text-gray-900' %>
      <% end %>
    </nav>
    <%= link_to search_form_path, class: 'inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0 ml-auto text-green-700 hover:text-white hover:bg-green-700' do %>
    Search
    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
      <path d="M5 12h14M12 5l7 7-7 7"></path>
    </svg>
    <% end %>
  </div>

  <!-- auth user menu -->
  <% if user_signed_in? %>
  <ul class="fixed bg-white p-7 left-96 hidden" id="auth-menu">
    <li><%= link_to 'お気に入り一覧', user_like_items_path(current_user), class: 'hover:text-blue-500 hover:underline' %></li>
    <li class="mt-3"><%= link_to 'レビュー一覧', user_reviews_path(current_user), class: 'hover:text-blue-500 hover:underline' %></li>
    <li class="mt-3">ユーザー情報編集</li>
  </ul>
  <% end %>
  <!-- /auth user menu -->
</header>
