<div class="w-5/6 mx-auto">
  <div class="text-center my-5">
    <h1 class="font-bold text-xl">レビュー一覧</h1>
  </div>
  <div class="container mb-2 mx-auto w-full">
    <ul class="flex flex-col p-4 w-5/6 mx-auto">
      <% @reviews.each do |review| %>
      <li class="border-gray-400 flex flex-row w-full my-2">
        <div class="flex flex-1 items-center p-4 rounded-2xl border-2 p-6">
          <div class="flex-1 pl-1 mr-16">
            <div class="font-medium">
              <%= review.body %>/<%= link_to review.item.title, item_path(review.item.id), class: 'hover:text-blue-500 hover:underline' %>
            </div>
          </div>
          <div class="w-1/4" id="review-area<%= review.id %>" data-score="<%= review.score %>">
            <%= show_user_score(review.score) %>(<%= review.score %>)
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
