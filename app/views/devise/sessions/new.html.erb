<div class="w-full min-h-screen bg-gray-50 flex flex-col sm:justify-center items-center pt-6 sm:pt-0">
  <div class="w-full sm:max-w-md p-5 mx-auto">
    <h2 class="mb-12 text-center text-5xl font-extrabold">ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |user| %>
    <div class="mb-4">
      <%= user.label :email, 'メールアドレス', class: 'block mb-1' %>
      <%= user.email_field :email, class: 'py-2 px-3 border border-gray-300 focus:border-red-300 focus:outline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full' %>
    </div>
    <div class="mb-4">
      <%= user.label :password, 'パスワード', class: 'block mb-1' %>
      <%= user.password_field :password, class: 'py-2 px-3 border border-gray-300 focus:border-red-300 focus:outline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full' %>
    </div>
    <div class="mb-4">
      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= user.check_box :remember_me %>
        <%= user.label :remember_me, 'ログイン状態を保存する' %>
      </div>
      <% end %>
    </div>
    <div class="mt-6">
      <%= user.submit "ログイン", class: 'w-full inline-flex items-center justify-center px-4 py-2 bg-blue-600 border border-transparent rounded-md font-semibold capitalize text-white hover:bg-blue-700 active:bg-blue-700 focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200 disabled:opacity-25 transition cursor-pointer' %>
    </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
